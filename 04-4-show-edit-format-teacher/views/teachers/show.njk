{% extends "layout.njk" %}

{% block content %}
<main>
    <div class="card">
        <section 
            class="avatar" 
            style="border-radius: 4px 0 0 4px; background: url({{ teacher.avatar_url }}) no-repeat center center / cover">
        </section>
        <section class="details">

            <h3>Detalhes</h3>

            <div class="item">
                <div>Nome completo</div>
                <div>{{ teacher.name }}</div>
            </div>
            <div class="item">
                <div>Idade</div>
                <div>{{ teacher.age }}</div>
            </div>
            <div class="item">
                <div>Grau de escolaridade</div>
                <div>{{ teacher.schooling }}</div>
            </div>
            <div class="item">
                <div>Tipo de aula</div>
                <div>{{ "Presencial" if teacher.type_class == "presential" else "À distância"}}</div>
            </div>
            <div class="item">
                <div>Àrea de atuação</div>
                <div>
                    {% for acting in teacher.acting %}
                        <span>{{ acting }}</span>
                    {% endfor %}
                </div>
            </div>
            <div class="item">
                <div>Desde</div>
                <div>{{ teacher.created_at }}</div>
            </div>
            <a class="button" href="/professores/{{ teacher.id }}/editar">Editar</a>

        </section>
    </div>
</main>

{% endblock content %}