{% extends "layout.njk" %}

{% block content %}
<main>
    <form class="card" method="POST" action="/professores">
        <section 
            class="avatar" 
            style="border-radius: 4px 0 0 4px; background: url(http://source.unsplash.com/collection/994610/500x500) no-repeat center center / cover">
        </section>
        <section class="details">

            <h3>Novo professor</h3>

            <div class="item">
                <div>Avatar URL</div>
                <div>
                    <input type="url" name="avatar_url" placeholder="http://"> 
                </div>
            </div>
            <div class="item">
                <div>Nome completo</div>
                <div>
                    <input type="text" name="name" placeholder="Nome do professor">
                </div>
            </div>
            <div class="item">
                <div>Data de nascimento</div>
                <div>
                    <input type="date" name="birth">
                </div>
            </div>
            <div class="item">
                <div>Grau de escolaridade</div>
                <div>
                    <select name="schooling">
                        <option value="medium">Ensino Médio Completo</option>
                        <option value="higher">Ensino Superior Completo</option>
                        <option value="masters">Mestrado</option>
                        <option value="doctorate">Doutorado</option>
                    </select>
                </div>
            </div>
            <div class="item">
                <div>Tipo de aula</div>
                <div>
                    <span><input type="radio" name="type_class" value="presential">Presencial</span>
                    <span><input type="radio" name="type_class" value="distance">À distância</span>
                </div>
            </div>
            <div class="item">
                <div>Àrea de atuação</div>
                <input type="text" name="acting" placeholder="Separe a(s) área(s) por vírgula">
            </div>
            <button type="submit">Salvar</button>
        </section>
    </form>
</main>

{% endblock content %}