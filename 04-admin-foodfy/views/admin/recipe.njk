{% extends "admin/layout.njk" %}

{% block head %}
    <title>Admin | {{ recipe.name }}</title>
    <link rel="stylesheet" href="/admin/recipe.css">
{% endblock %}

{% block content %}
<main class="container">

    <div class="h2-and-button">
        <h2>Receita: {{ recipe.name }}</h2>
        <a class="button" href="/admin/recipes/{{ recipe.id }}/edit">Editar receita</a>
    </div>


    <div class="recipe-image">
        <img src="{{ recipe.image }}" alt="{{ recipe.name }}">
    </div>

    <div class="mid-title">
        <h1>{{ recipe.name }}</h1>
        <p>por {{ recipe.author }}</p>
    </div>

    <section class="ingredients">
        <h2>Ingredientes</h2>
        <ul class="recipe-information">
            {% for ingredient in recipe.ingredients %}
                <li>{{ingredient}}</li>
            {% endfor %}
        </ul>
    </section>

    <section class="preparation">
        <h2>Modo de preparo</h2>
        <ul class="recipe-information">
            {% for preparation in recipe.preparations %}
                <li>{{preparation}}</li>
            {% endfor %}
        </ul>
    </section>

    <section class="add-information">
        <h2>Informações adicionais</h2>
        <p class="recipe-information">{{ recipe.informations }}</p>
    </section>
</main>
{% endblock %}